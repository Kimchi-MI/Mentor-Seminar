# 1. Берём официальный образ
FROM python:3.12-slim

# 2. Опционально ставим системные пакеты
RUN apt-get update && apt-get install -y curl

# 3. Переменная сборки (используется в RUN)
ARG BUILD_MODE=dev
RUN echo "Build mode: ${BUILD_MODE}"

# 4. Переменная среды (используется приложением)
ENV API_URL=https://example.com/api

# 5. Настраиваем рабочую директорию
WORKDIR /app

# 6. Копируем зависимости отдельно для кэша
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 7. Копируем весь проект
COPY . .

# 8. Тома (данные не пропадут)
VOLUME ["/app/data"]

# 9. Порт
EXPOSE 8000

# 10. Команда запуска
CMD ["python", "main.py"]
